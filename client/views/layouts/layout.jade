doctype html
html(lang 'en')
  head
    title SmartDeviceLink Server

    block meta
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
      meta(name='description', content='')
      meta(name='author', content='')

    block allStylesheets
      link(href="/bootstrap/dist/css/bootstrap.min.css", rel="stylesheet")
      link(href="/highlightjs/styles/default.css", rel="stylesheet")
      link(href="main.css", rel="stylesheet")
    block stylesheets

  body
    nav(class="navbar navbar-inverse navbar-fixed-top", role="navigation")
      .container
          .navbar-header

            // In mobile view, display brand and navigation together.
            button.navbar-toggle(type="button", data-toggle="collapse", data-target="#navigationBarCollapse")
              span(class="sr-only") Toggle navigation
              span(class="icon-bar")
              span(class="icon-bar")
              span(class="icon-bar")
            a.navbar-brand(href="/") SDL Server

          .collapse.navbar-collapse(id="navigationBarCollapse")
            ul.nav.navbar-nav
              li
                a(href="/policy") Policy Request
              li
                a(href="https://github.com/smartdevicelink/sdl_server/wiki/Policies", target="_blank") Documentation


    block page

    block allScripts
      script(src="jquery/dist/jquery.min.js")
      script(src="bootstrap/dist/js/bootstrap.min.js")
      script(src="highlightjs/highlight.pack.min.js")
    block scripts